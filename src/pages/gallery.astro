---
import Layout from "../layouts/Layout.astro"

const galleryItems = await Astro.glob("../content/gallery/*.md")
---

<Layout title="Infinite Canvas" activeItem="/gallery">
  <!-- header slot-->
  <header slot="header" class="space-y-8 text-center pb-168 pt-72">
    <h1 class="text-black sans-48">App gallery</h1>
    <p class="serif-24 text-brown">Some tagline about the app gallery</p>
  </header>

  <!-- default slot -->
  <ul
    class="grid grid-cols-1 540:grid-cols-2 860:grid-cols-3 1280:grid-cols-4 gap-24 p-24 640:p-32 max-w-1440 m-auto"
  >
    {
      galleryItems.map(
        ({
          frontmatter: { title, platforms, url, usecases, description, image }
        }) => (
          <li class="p-24 bg-brown bg-opacity-5 rounded-4">
            <img
              src={`/images/gallery/${image}`}
              alt={`Screenshot of ${title}`}
              class="mb-24"
            />
            <h2 class="sans-20 text-gray">{title}</h2>
            <a href={url} target="_blank">
              <p class="sans-16 mb-16 text-blue font-weight hover-dim">
                {url.replace("https://", "") + " â†—"}
              </p>
            </a>
            <p class="serif-16 text-brown text-opacity-80">{description}</p>
          </li>
        )
      )
    }
  </ul>
</Layout>
