---
import joinClasses from "../utilities/joinClasses"
const { activeItem } = Astro.props

// sets the color based on if item is active or not
const navClass = (currentItem) =>
  joinClasses(
    "text-gray hover-dim sans-16",
    activeItem === currentItem ? "" : "text-opacity-60"
  )

export interface Props {
  activeItem?: string
}
---

<nav class="flex flex-row justify-between p-24 640:p-32 mx-auto max-w-1440">
  <a class={navClass("/")} href="/">Home</a>
  <div class="space-x-24 640:space-x-32">
    <a href="/gallery" class={navClass("/gallery")}>App gallery</a>
    <a href="/history" class={navClass("/history")}>History</a>
  </div>
</nav>
